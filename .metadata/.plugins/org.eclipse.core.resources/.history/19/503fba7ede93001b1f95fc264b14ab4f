package AP_GuessingGame;

public class HiddenWord {

	private String word;

	public HiddenWord(String word) {
		this.word = word;
	}

	public String getWord() {
		return word;
	}

	public String getHint(String guess) {
		String hint = "";
		boolean isPresent = false;
		boolean isCorrect = false;

		for (int i = 0; i < guess.length(); i++) {
			if (guess.charAt(i) == word.charAt(i)) {
				isCorrect = true;
			} else {
				for (int i1 = 0; i1 < word.length(); i1++) {
					for (int i2 = 0; i2 < guess.length(); i2++) {
						if (word.charAt(i1) == guess.charAt(i2)) {
							isPresent = true;
						}
					}
					if (isPresent == false) {
						hint += '*';
					} else if (isPresent == true && isCorrect == false){
						hint += '+';
					} else {
						hint += word.charAt(i);
					}
					isPresent = false;
				}
			}
		}

		return hint;
	}
}
