package AP_GuessingGame;

public class HiddenWord {
	
	private String word;
	
	public HiddenWord(String word) {
		this.word = word;
	}
	
	public String getWord() {
		return word;
	}
	
	public String getHint(String guess) {
		String hint = "";
		boolean isPresent = false;
		
		for (int i1 = 0; i1 < word.length(); i1++) {
			for (int i2 = 0; i2 < guess.length(); i2++) {
				if (guess.charAt(i2) == word.charAt(i1)) {
					if (i2 == i1) {
						hint += word.charAt(i1);
					} else {
						hint += '+';
					}
					isPresent = true;
				}
			}
			if (isPresent == false) {
				hint += '*';
			}
			isPresent = false;
		}
		
		return hint;
	}
}
